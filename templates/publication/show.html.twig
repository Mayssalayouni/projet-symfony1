{% extends 'base.html.twig' %}

{% block title %}Publication{% endblock %}

{% block body %}
    <h1>Publication</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ publication.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ publication.titre }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ publication.auteur }}</td>
            </tr>
            <tr>
                <th>Datepub</th>
                <td>{{ publication.datepub ? publication.datepub|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Resume</th>
                <td>{{ publication.resume }}</td>
            </tr>
            <tr>
                <th>Motcles</th>
                <td>{{ publication.motcles }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_publication_index') }}">back to list</a>

    <a href="{{ path('app_publication_edit', {'id': publication.id}) }}">edit</a>

    {{ include('publication/_delete_form.html.twig') }}
{% endblock %}
